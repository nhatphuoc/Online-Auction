{
  "info": {
    "name": "Auth Service via API Gateway",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fullName\": \"Test User\",\n  \"email\": \"testuser@example.com\",\n  \"password\": \"12345678\",\n  \"birthDay\": \"2000-01-01\",\n  \"emailVerified\": false\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "auth", "register"]
        }
      }
    },
    {
      "name": "Sign In",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"12345678\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/auth/sign-in",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "auth", "sign-in"]
        }
      }
    },
    {
      "name": "Verify OTP",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"otpCode\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/auth/verify-otp",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "auth", "verify-otp"]
        }
      }
    },
    {
      "name": "Validate JWT",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"<accessToken từ bước Sign In>\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/auth/validate-jwt",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "auth", "validate-jwt"]
        }
      }
    },
    {
      "name": "Sign In Google",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"idToken\": \"<Google ID Token>\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/auth/sign-in/google",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "auth", "sign-in", "google"]
        }
      }
    }
  ]
}
